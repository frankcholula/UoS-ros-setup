{
    "name": "ROS Melodic Sandbox",
    "dockerComposeFile": [
        "${localWorkspaceFolder}/.devcontainer/docker-compose.${localEnv:HOSTTYPE:arm64}.yaml"
    ],
    "service": "rosdev",
    
    "workspaceFolder": "/root",
    "remoteUser": "root",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-iot.vscode-ros",
                "ms-python.python",
                "ms-vscode.cpptools",
                "dotjoshjohnson.xml",
                "ms-vscode.cmake-tools",
                "ms-python.black-formatter",
                "ms-vscode.makefile-tools"
            ]
        }
    },
    "forwardPorts": [
        5901,
        6080
    ],
    "postStartCommand": "echo '\n\nüöÄ Container is ready! For üçé users, connect to the UI by opening: http://localhost:6080/vnc.html in your browser\n\n'"
}
